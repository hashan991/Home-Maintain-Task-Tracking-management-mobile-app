<!-- res/drawable/card_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent gray background (adjust alpha as needed) -->
    <solid android:color="#80000000"/> <!-- 80 is the alpha value, BDBDBD is the gray color -->
    <stroke android:width="1dp" android:color="#FFFFFF"/> <!-- White border -->
    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Padding inside the card -->
    <padding android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp"/>

    <!-- Optional: Shadow color (ignored on most platforms; real shadow requires elevation) -->
    <!-- Not applicable for transparent backgrounds -->
</shape>
