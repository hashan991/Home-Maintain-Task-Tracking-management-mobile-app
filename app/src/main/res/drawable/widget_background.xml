<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#1C2434"/> <!-- Dark gray-blue color -->

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional shadow-like effect with padding -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>

    <!-- Border (optional for a subtle outline) -->
    <stroke
        android:width="2dp"
        android:color="#333333" /> <!-- Darker gray border for contrast -->
</shape>
